generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid()) @map("_id")
  username String  @unique
  password String
  avatarId String? @default("1e54665e-45ef-4756-a7fa-1dc183fb055b")
  role     Role
  spaces   Space[]
  avatar   Avatar? @relation(fields: [avatarId], references: [id])
}

model Space {
  id        String          @id @default(cuid()) @map("_id")
  name      String
  width     Int
  height    Int
  thumbnail String?         @default("https://www.shutterstock.com/image-vector/river-mountains-top-view-landscape-260nw-2137764849.jpg")
  creatorId String
  creator   User            @relation(fields: [creatorId], references: [id])
  elements  spaceElements[]
}

model spaceElements {
  id        String  @id @default(uuid()) @map("_id")
  elementId String
  spaceId   String
  x         Int
  y         Int
  space     Space   @relation(fields: [spaceId], references: [id])
  element   Element @relation(fields: [elementId], references: [id])
}

model Element {
  id          String          @id @default(uuid()) @map("_id")
  name        String
  width       Int
  height      Int
  static      Boolean
  imageUrl    String
  spaces      spaceElements[]
  mapElements MapElements[]
}

model Map {
  id          String        @id @default(uuid()) @map("_id")
  width       Int
  height      Int
  name        String
  thumbnail   String        @default("https://www.shutterstock.com/image-vector/cartoon-planets-spaceships-game-spaceship-260nw-2115077531.jpg")
  mapElements MapElements[]
}

model MapElements {
  id        String  @id @default(uuid()) @map("_id")
  mapId     String
  elementId String
  x         Int?    @default(0)
  y         Int?    @default(0)
  map       Map     @relation(fields: [mapId], references: [id])
  element   Element @relation(fields: [elementId], references: [id])
}

model Avatar {
  id       String  @id @default(uuid()) @map("_id")
  imageUrl String?
  name     String?
  users    User[]
}

enum Role {
  Admin
  User
}
